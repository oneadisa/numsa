      {
        title: 'Excellence',
        description: 'To ensure Nile University produces world-class medical doctors.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Collaboration',
        description: 'To encourage cooperation between NUMSA, its affiliates and the authority of Nile University.',
        icon: 'tabler:components',
      },
      {
        title: 'Research',
        description: 'To encourage research among students towards advancement in health.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Values',
        description:
          'To instill discipline, integrity and professionalism within the students of Nile university of Nigeria.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Giving',
        description: 'To contribute towards the improvement of health of the community via participation in community projects and organization of charity functions.',
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Talent',
        description:
          'To Provide, supervise or manage educational, cultural, sporting, welfare, recreational or commercial facilities or activities intended for the benefit directly or indirectly, of medical students.',
        icon: 'tabler:bulb',
      },
    ]}
  />

