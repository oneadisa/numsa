<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Our Activities',
        href: '#',
        // target: '_blank',
        // icon: 'tabler:download',
      },
      { text: 'The EXCOS', href: '/2024/excos' },
    ]}
    image={{ src: '/assets/images/numsa_logo.png', alt: 'NUMSA  Hero Image' }}
