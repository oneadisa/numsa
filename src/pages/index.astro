    <Fragment slot="title">
      <!-- Nile University Medical Students Association -->
      <!-- <span class="hidden xl:inline">Medical Students Association</span> -->
      <span class="text-accent dark:text-white highlight"></span> NUMSA
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-center sm:inline">
        <span class="text-center font-semibold">Nile University Medical Students Association -</span>  NUMSA, the official representative body of medical students at Nile University
        of Nigeria.</span
      >
      <span class="block mb-1 font-bold text-center text-blue-800">NUMSA : In a League Of Its Own.</span>
