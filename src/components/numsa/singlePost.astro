import Content from '../widgets/Content.astro';
import type { Post } from './listItem.astro';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;
const { data } = post;
// console.log(data)
---

<section class="py-0.5 sm:py-4 lg:py-5 mx-auto">
  <article>
    <header class={post.data.image ? '' : ''}>
      <div class="flex justify-between flex-col sm:flex-row max-w-3xl mx-auto mt-0 mb-2 px-4 sm:px-6 sm:items-center">
        <p>
          <!-- <Icon name="tabler:clock" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" /> -->
          <!-- <time datetime={String(post.data.level)} class="inline-block">{post.data.level}</time> -->
          <!-- {
            post.data.level && (
              <>
                {' '}
                ·{' '}<Icon name="tabler:user" class="w-4 h-4 inline-block -mt-0.5 dark:text-gray-400" />
                <span class="inline-block">{post.data.level}</span>
              </>
            )
          } -->
          <!-- {
            post.category && (
              <>
                {' '}
                ·{' '}
                <a class="capitalize hover:underline inline-block" href={getPermalink(post.category, 'category')}>
                  {post.category.replaceAll('-', ' ')}
                </a>
              </>
            )
          } -->
          <!-- {post.readingTime && <> · {post.readingTime} min read</>} -->
        </p>
      </div>

      <h1
        class="px-4 text-center sm:px-6 max-w-3xl mx-auto text-4xl md:text-5xl font-bold leading-tighter tracking-tighter pb-12 font-heading"
      >
        {post.data.position}
      </h1>
      <!-- <p
        class="max-w-3xl mx-auto mt-4 mb-8 px-4 sm:px-6 text-xl md:text-2xl text-muted dark:text-slate-400 text-justify"
      >
        {post.excerpt}
      </p> -->

      {
        post.data.image ? (
          <Image
            src={post.data.image}
            class="max-w-full mx-auto mb-12 sm:rounded-md bg-gray-400 dark:bg-slate-700"
            widths={[400, 900]}
            sizes="(max-width: 900px) 350px, 900px"
            alt={post?.data.position || ''}
            width={350}
            height={500}
            loading="eager"
            decoding="async"
          />
        ) : (
          <div class="max-w-3xl mx-auto px-4 sm:px-6">
            <div class="border-t dark:border-slate-700" />
          </div>
        )
      }
    </header>

    <h3 class="px-4 sm:px-6 max-w-3xl mx-auto text-2xl md:text-3xl leading-tighter tracking-tighter pb-2 font-heading">
      About
    </h3>

    <div
      class="mx-auto px-6 sm:px-6 max-w-3xl prose prose-lg lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-primary dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8 prose-headings:scroll-mt-[80px]"
    >
      {
        post.data.position === 'House Members' ? (
          <div>
            <h2 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">600 Level</h2>
            <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
              <li>Abraham Pere</li>
              <li>Ummi Zahra</li>
              <li> Naja’atu Bawa</li>
              <li>Maimunah Haruna</li>
            </ul>
            <h2 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">500 Level</h2>
            <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
              <li>Lawal Sakinatu</li>
              <li>Osaze-Ogedegbe Adaora</li>
              <li>Hyeladzira Mshelbara</li>
              <li>Eniola Oladele</li>
            </ul>
            <h2 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">400 Level</h2>
            <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
              <li>Mohammed-Neizifi Yusuf</li>
              <li>Kolade Suliyat</li>
              <li>Fareedat Opeifa</li>
            </ul>
            <h2 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">300 Level</h2>
            <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
              <li>Simisola Okunrinboye</li>
              <li>Fatima Murtala</li>
              <li>Salama Sanda</li>
              <li>Idah Mercy Ene</li>
            </ul>
            <h2 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">200 Level</h2>
            <ul class="max-w-md space-y-1 text-gray-500 list-disc list-inside dark:text-gray-400">
              <li>David Ejenavi</li>
              <li>Musbaudeen Idris Girei</li>
              <li>Chigbo Oluchi Joy Chisom</li>
              <li>Matilukuro Omobolaji Theressa</li>
              <li>Ikenna Ugwu</li>
            </ul>
          </div>
        ) : post.data.position === 'President' ? (
          <>
            <Fragment set:html={post.data.bio || ''} />
            <br/>
            <br/>
            <a href="/bio/president">Offices Held</a>
          </>
        ) : (
          <Fragment set:html={post.data.bio || ''} />
        )
      }
      <div class="mx-auto px-6 sm:px-6 max-w-3xl mt-8 flex justify-between flex-col sm:flex-row">
        <!-- <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" /> -->
        <!-- <SocialShare url={url} text={post.data.position} class="mt-5 sm:mt-1 align-middle text-gray-500 dark:text-slate-600" /> -->
      </div>
    </div>
  </article>
</section>
